uniteste # uniteste.0

uniteste.descrever(["Casos extremos de referências aninhadas" [
  // Caso onde propriedade pode mascarar variável externa
  uniteste.iguais([
    {
      a: 100
      exemplo: {
        a: 2
        b: {
          c: a + 3
        }
      }
      resultado: exemplo.b.c
    }.resultado
    5  // Deve usar a = 2 do objeto, não a = 100 externa
  ])
  
  // Lista vazia aninhada
  uniteste.iguais([
    {
      exemplo: {
        a: 1
        b: {}
      }
      resultado: exemplo.a
    }.resultado
    1
  ])
  
  // Teste de referência a propriedade que usa variável do escopo externo
  uniteste.iguais([
    {
      exemplo: {
        a: 1
        b: {
          c: a + 3
        }
        d: {
          e: a + 10  // Usa a variável a do escopo do objeto
        }
      }
      resultado: exemplo.b.c  // Testamos a parte aninhada
    }.resultado
    4
  ])
  ]])