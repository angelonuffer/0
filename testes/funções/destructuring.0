uniteste # ../integração/uniteste.0

uniteste.descrever(["Destructuring de objetos em parâmetros de função" [
  // Test basic destructuring
  uniteste.iguais([
    {
      soma: { a b } => a + b
      resultado: soma({ a: 2 b: 3 })
    }.resultado
    5
  ])
  
  // Test destructuring with more keys
  uniteste.iguais([
    {
      calc: { x y z } => x + y * z
      resultado: calc({ x: 2 y: 3 z: 4 })
    }.resultado
    14
  ])
  
  // Test destructuring with named keys in different order
  uniteste.iguais([
    {
      subtrair: { a b } => a - b
      resultado: subtrair({ b: 5 a: 10 })
    }.resultado
    5
  ])
  
  // Test destructuring with text values
  uniteste.iguais([
    {
      juntar: { primeiro segundo } => [primeiro " " segundo] * ""
      resultado: juntar({ primeiro: "Hello" segundo: "World" })
    }.resultado
    "Hello World"
  ])
  
  // Test the exact example from the issue
  uniteste.iguais([
    {
      soma: { a b } => a + b
      resultado: soma({ a: 2 b: 3 })
    }.resultado
    5
  ])
  
  // Test with more complex expressions
  uniteste.iguais([
    {
      multiplicar_e_somar: { x y base } => x * y + base
      resultado: multiplicar_e_somar({ x: 5 y: 3 base: 10 })
    }.resultado
    25
  ])
  
  // Test with single parameter destructuring
  uniteste.iguais([
    {
      obter_valor: { valor } => valor
      resultado: obter_valor({ valor: 42 })
    }.resultado
    42
  ])
  ]])
