uniteste # ../integração/uniteste.0

uniteste.descrever({ nome: "Destructuring de objetos em parâmetros de função" testes: [
  // Test basic destructuring
  uniteste.iguais([
    (
      soma = { a b } => a + b
      soma({
        a: 2
        b: 3
      })
    )
    5
  ])
  
  // Test destructuring with more keys
  uniteste.iguais([
    (
      calc = { x y z } => x + y * z
      calc({
        x: 2
        y: 3
        z: 4
      })
    )
    14
  ])
  
  // Test destructuring with named keys in different order
  uniteste.iguais([
    (
      subtrair = { a b } => a - b
      subtrair({
        b: 5
        a: 10
      })
    )
    5
  ])
  
  // Test destructuring with text values
  uniteste.iguais([
    (
      juntar = { primeiro segundo } => [primeiro " " segundo] * ""
      juntar({
        primeiro: "Hello"
        segundo: "World"
      })
    )
    "Hello World"
  ])
  
  // Test the exact example from the issue
  uniteste.iguais([
    (
      soma = { a b } => a + b
      soma({
        a: 2
        b: 3
      })
    )
    5
  ])
  
  // Test with more complex expressions
  uniteste.iguais([
    (
      multiplicar_e_somar = { x y base } => x * y + base
      multiplicar_e_somar({
        x: 5
        y: 3
        base: 10
      })
    )
    25
  ])
  
  // Test with single parameter destructuring
  uniteste.iguais([
    (
      obter_valor = { valor } => valor
      obter_valor({
        valor: 42
      })
    )
    42
  ])
]})